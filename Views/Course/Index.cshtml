@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Courses";
}

@model IEnumerable<SmartTutionHub.Models.Course>

<h2>Courses</h2>

<table class="table">
    <tr>
        <th>Subject</th>
        <th>Price</th>
        <th>Tutor</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Subject</td>
            <td>@item.Price</td>
            <td>@item.Tutor?.FullName</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">View</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
            </td>
        </tr>
    }
</table>
