<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - SmartTutionHub</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="wrapper d-flex flex-column min-vh-100">
        <header class="bg-light py-3">
            <div class="container d-flex justify-content-between">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">TuitionHubLK</a>
                <nav>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a class="btn btn-link" asp-controller="Home" asp-action="Dashboard">Dashboard</a>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-link">Logout</button>
                        </form>

                        <a class="btn btn-link" asp-controller="Profile" asp-action="Index">Profile</a>
              
                    }
                    else
                    {
                        <a class="btn btn-link" asp-controller="Account" asp-action="Register">Register</a>
                        <a class="btn btn-link" asp-controller="Account" asp-action="Login">Login</a>
                    }
                </nav>
            </div>
        </header>

        <main role="main" class="flex-fill container py-4">
            @RenderBody()
        </main>

        <footer class="footer bg-light py-3 mt-auto">
            <div class="container text-center">
                <p>&copy; 2025 SmartTutionHub. All rights reserved.</p>
            </div>
        </footer>

        @RenderSection("Scripts", required: false)
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
